<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDEDEC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/resultImage"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/perfect" />

        <!-- Score TextView -->
        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Score: 0"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Correct TextView -->
        <TextView
            android:id="@+id/correctTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Réponses correctes: 0"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Incorrect TextView -->
        <TextView
            android:id="@+id/incorrectTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Réponses incorrectes: 0"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Buttons LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Space
            android:layout_width="91dp"
            android:layout_height="match_parent" />

        <!-- Exit Button -->
        <ImageButton
            android:id="@+id/exitButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:src="@drawable/ee"
            android:scaleType="centerCrop"/>

        <Space
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <!-- Next Button -->
        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:src="@drawable/next"
            android:scaleType="centerCrop"/>

        <Space
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <!-- Try Again Button -->
        <ImageButton
            android:id="@+id/tryAgainButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:src="@drawable/restartr"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/top_signup" />


</RelativeLayout>
