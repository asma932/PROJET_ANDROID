<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- White background with rounded corners and padding -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Adjust the radius as needed -->
            <solid android:color="@android:color/white" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" /> <!-- Adjust the padding as needed -->
        </shape>
    </item>

    <!-- Dark shadow with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Adjust the radius as needed -->
            <solid android:color="#44000000" />
        </shape>
    </item>
</layer-list>
